<resources>


    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueDefault</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/accentBlue</item>
        <item name="android:colorBackground">@color/blueBackground</item>
        <item name="colorControlHighlight">@color/blackTransparent</item>
        <item name="android:statusBarColor">@color/blueDark</item>
    </style>

    
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
        <item name="colorPrimaryDark">@color/blueBackground</item>
        <item name="android:statusBarColor">@color/blueBackground</item>
    </style>

    <style name="SignInTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/blueBackground</item>


    </style>

    <style name="TextBody1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>


    <style name="ChipTheme" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/sfproregular</item>
    </style>

    <style name="ChipThemeBig" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/sfproregular</item>
    </style>


    <style name="tabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
       <item name="android:fontFamily">@font/sfprolight</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="floating_action_button">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="upgradeActivity" parent="AppTheme">
        <item name="android:statusBarColor">#3B9EC3</item>
    </style>
</resources>
